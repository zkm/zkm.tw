{
  "name": "zkm.tw",
  "private": true,
  "version": "4.0.4",
  "type": "module",
  "repository": "git@github.com:zkm/zkm.tw.git",
  "author": "Zach Schneider <me@zachschneider.com>",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b tsconfig.app.json tsconfig.node.json && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "verify": "bun run lint && bun run typecheck && bun run test",
    "fix": "bun run lint:fix && bun run format",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf dist",
    "prebuild": "bun run verify && bun run clean",
    "predeploy": "bun run build",
    "prepare": "husky",
    "deploy": "bun scripts/deploy.js",
    "docker:dev": "docker compose up",
    "docker:prod": "docker compose up web-prod",
    "docker:down": "docker compose down",
    "deps:check": "bunx npm-check-updates",
    "deps:minor": "bunx npm-check-updates -t minor",
    "deps:apply": "bunx npm-check-updates -u && bun install",
    "deps:apply:minor": "bunx npm-check-updates -u -t minor && bun install",
    "deps:interactive": "bun update --interactive",
    "deps:interactive:range": "bun update --interactive",
    "deps:audit": "bun audit",
    "ci": "bun install --frozen-lockfile && bun run verify && bun run build"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "chart.js": "^4.5.1",
    "framer-motion": "^12.26.1",
    "jspdf": "^4.0.0",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.2.3",
    "react-gtm-module": "^2.0.11",
    "react-markdown": "^10.1.0",
    "styled-components": "^6.3.5",
    "styled-system": "^5.1.5",
    "web-vitals": "^5.1.0"
  },
  "engines": {
    "node": ">=24 <26"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.7",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/react-gtm-module": "^2.0.4",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.0.0",
    "happy-dom": "^20.1.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "packageManager": "yarn@4.12.0"
}
