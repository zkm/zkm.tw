{
  "name": "zkm.tw",
  "private": true,
  "version": "4.0.4",
  "type": "module",
  "repository": "git@github.com:zkm/zkm.tw.git",
  "author": "Zach Schneider <me@zachschneider.com>",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b tsconfig.app.json tsconfig.node.json && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "verify": "yarn lint && yarn typecheck && yarn test",
    "fix": "yarn lint:fix && yarn format",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf dist",
    "prebuild": "yarn verify && yarn clean",
    "predeploy": "yarn build",
    "prepare": "husky",
    "deploy": "node scripts/deploy.js",
    "docker:dev": "docker compose up",
    "docker:prod": "docker compose up web-prod",
    "docker:down": "docker compose down",
    "deps:check": "yarn dlx npm-check-updates",
    "deps:minor": "yarn dlx npm-check-updates -t minor",
    "deps:apply": "yarn dlx npm-check-updates -u && yarn install",
    "deps:apply:minor": "yarn dlx npm-check-updates -u -t minor && yarn install",
    "deps:interactive": "yarn up -i",
    "deps:interactive:range": "yarn up -i -R",
    "deps:audit": "yarn npm audit",
    "ci": "yarn --immutable && yarn verify && yarn build"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "chart.js": "^4.5.1",
    "framer-motion": "^12.23.24",
    "jspdf": "^3.0.4",
    "lucide-react": "^0.554.0",
    "react": "^19.2.0",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.2.0",
    "react-gtm-module": "^2.0.11",
    "react-markdown": "^10.1.0",
    "styled-components": "^6.1.19",
    "styled-system": "^5.1.5",
    "web-vitals": "^5.1.0"
  },
  "engines": {
    "node": ">=24 <26"
  },
  "packageManager": "yarn@4.11.0",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-gtm-module": "^2.0.4",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.2.4",
    "vitest": "^4.0.14"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
