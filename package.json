{
  "name": "zkm.tw",
  "private": true,
  "version": "4.0.4",
  "type": "module",
  "repository": "git@github.com:zkm/zkm.tw.git",
  "author": "Zach Schneider <me@zachschneider.com>",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b tsconfig.app.json tsconfig.node.json && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "verify": "yarn lint && yarn typecheck && yarn test",
    "fix": "yarn lint:fix && yarn format",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf dist",
    "prebuild": "yarn verify && yarn clean",
    "predeploy": "yarn build",
    "prepare": "husky",
    "deploy": "yarn build && node scripts/deploy.js",
    "docker:dev": "docker compose up web",
    "docker:prod": "docker compose up web-prod",
    "docker:down": "docker compose down",
    "deps:check": "yarn dlx npm-check-updates",
    "deps:minor": "yarn dlx npm-check-updates -t minor",
    "deps:apply": "yarn dlx npm-check-updates -u && yarn install",
    "deps:apply:minor": "yarn dlx npm-check-updates -u -t minor && yarn install",
    "deps:interactive": "yarn up -i",
    "deps:interactive:range": "yarn up -i",
    "deps:audit": "yarn npm audit --all",
    "health": "node scripts/health-check.js",
    "health:full": "yarn health && yarn deps:audit && yarn deps:check",
    "health:report": "node scripts/generate-health-report.js",
    "health:help": "node scripts/health-help.js",
    "ci": "yarn install --immutable && yarn verify && yarn build"
  },
  "dependencies": {
    "axios": "^1.13.5",
    "chart.js": "^4.5.1",
    "framer-motion": "^12.34.3",
    "jspdf": "^4.2.0",
    "lucide-react": "^0.575.0",
    "react": "^19.2.4",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.2.4",
    "react-gtm-module": "^2.0.11",
    "react-markdown": "^10.1.0",
    "styled-components": "^6.3.11",
    "styled-system": "^5.1.5",
    "web-vitals": "^5.1.0"
  },
  "engines": {
    "node": ">=24 <26"
  },
  "resolutions": {
    "postcss": "^8.5.6",
    "js-tokens": "^9.0.1",
    "aria-query": "^5.3.2",
    "dom-accessibility-api": "^0.6.3",
    "ansi-styles": "^5.2.0",
    "react-is": "^17.0.2",
    "acorn": "^8.11.0",
    "semver": "^7.6.0",
    "yallist": "^4.0.0",
    "string-width": "^5.1.2",
    "strip-ansi": "^7.1.0",
    "wrap-ansi": "^8.1.0",
    "color-convert": "^2.0.1",
    "color-name": "^1.1.4",
    "has-flag": "^4.0.0",
    "supports-color": "^9.4.0",
    "chalk": "^5.3.0",
    "cliui": "^8.0.1",
    "get-caller-file": "^2.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@tailwindcss/postcss": "^4.2.1",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/react-gtm-module": "^2.0.4",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.1",
    "globals": "^17.3.0",
    "happy-dom": "^20.7.0",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.2.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "packageManager": "yarn@4.12.0",
  "trustedDependencies": [
    "core-js",
    "esbuild"
  ]
}
